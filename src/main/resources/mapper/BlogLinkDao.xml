    <select id="getTotalLinks" resultType="int">
        select count(*) from link
        where is_deleted=0
    </select>

    <select id="findLinkList" parameterType="Map" resultMap="BlogLinkResult">
        select *
        from link
        where is_deleted=0
        order by link_id desc
        <if test="start!=null and limit!=null">
            limit #{start},#{limit}
        </if>
    </select>

    <update id="deleteBatch" >
        update link
        set is_deleted=1 where link_id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="selectById" parameterType="Integer" resultMap="BlogLinkResult">
        select * from link
        where is_deleted=0 and link_id = #{id}
    </select>

